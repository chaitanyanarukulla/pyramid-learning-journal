{% extends "layout.jinja2" %}

{% block content %}
   <header class="masthead" style="background-image: url('../../static/seattle.jpg')">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading"><h2>Update blog</h2>
          <form method="POST" name="sentMessage" id="contactForm" novalidate>
          <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
              <div class="control-group">
                  <div class="form-group ">
                  <textarea class="form-control" name="title"  rows="1">{{ Entry.title }}</textarea>
                  <p class="help-block text-danger"></p>
                  </div>
              </div>
                <div class="control-group">
                  <div class="form-group ">
                  <textarea class="form-control" name="body" rows="5">{{ Entry.body }}</textarea>
                  </div>
                </div><br>
                <div id="success"></div>
              <div class="form-group"><button type="submit" value="Edit journal" class="btn btn-secondary" id="sendMessageButton">Publish &rarr;</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </header>
{% endblock %}