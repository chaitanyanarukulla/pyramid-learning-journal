{% extends "layout.jinja2" %}

{% block content %}
 <!-- Page Header -->
<header class="masthead" style="background-image: url('../static/seattle.jpg')">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Detail blog</h1>
          <span class="subheading"></span>
        </div>
      </div>
</header>
        <main class="article-content">
              <div class="page-header">
                <a class="btn btn-secondary float-right" href="{{ request.route_url('update', id=entry.id) }}">Edit this Post &rarr;</a>
                <h1>{{ entry.title }}</h1><h5>Last updated</h5><h6>{{ entry.creation_date }}</h6>
              </div>
              <div class="card">
                <div class="card-body">
                     <p class="card-text">{{ entry.body }}</p>
                </div>
              </div>
        </main>
{% endblock %}
