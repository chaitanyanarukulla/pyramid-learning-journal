{% extends "layout.jinja2" %}
{% block content %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('../static/seattle.jpg')">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Daily blogs </h1>
              <span class="subheading"></span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
{% for entry in entry %}
    <div class="clearfix">
    <a class="btn btn-secondary float-right" href="/journal/new-entry">New Entry &rarr;</a>
    </div>
          <div class="card">
          <div class="card-body">
              <h4 class="card-title">{{ entry.title|upper }}</h4>
              <h5>Last updated</h5><h6>{{ entry.creation_date }}</h6>
              <p class="card-text">{{ entry.body }}</p>
          </div>
          <a href="{{ request.route_url('detail', id=entry.id) }}" class="btn btn--secondary">Details &rarr;</a>
        </div>
{% endfor %}
{% endblock %}


