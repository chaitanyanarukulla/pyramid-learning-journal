{% extends "layout.jinja2" %}
{% block content %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('../static/seattle.jpg')">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h2>Daily blogs </h2>
              <span class="subheading"></span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->

      {% for entry in entry %}
      <hr>
        <div class="clearfix">
          <div class="card-body">
          <h4 class="card-title">{{ entry.title|upper }}</h4><h5>Last updated: {{ entry.creation_date }}</h5>
          <a href="{{ request.route_url('detail', id=entry.id) }}" class="btn btn-secondary  ">Read this blog &rarr;</a>
        </div>
    {% endfor %}
    </hr>
    </main>
{% endblock %}


